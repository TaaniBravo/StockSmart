<div class="jumbotron text-white rounded-bottom">
  <h1 class="display-5">Make your due diligence easy.</h1>
  <hr class="my-4">
  <p>We utilize profiles so that users can save their stock watchlist. Signing up is recommend but not necessary.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/register" role="button">Sign Up</a>
  </p>
</div>

<div class="row justify-content-center mb-4">
  <div class="btn-group" id="form-buttons">
    <button id="daily-btn" class="btn btn-secondary active">Daily Search</button>
    <button id="historical-btn" class="btn btn-secondary">Historical Search</button>
    <button id="trending-btn" class="btn btn-secondary">Trending Tickers</button>
  </div>
</div>

<div class="container border border-4 rounded p-3 vw-90" id="daily-form">
  <form class="row g-2 justify-content-center px-4 pt-1">
    <div class="col-12">
      <input class="form-control" type="text" placeholder="Search Specific Ticker (optional)"
        aria-label="search-ticker" id="search-ticker">
    </div>
    <div class="col-12 mt-2">
      <label for="price-range" class="form-label col-sm-2">Price Range: </label>
      <input type="range" class="form-range col-sm-7" min="0" max="1000" step="1" id="price-range"
        onchange="updateRangeValue(this.value);">
      <input type="number" class="col-sm-2" name="price-text" id="price-text" value="500" disabled>
    </div>
    <div class="col-sm-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="Volume">
        <label class="form-check-label" for="Volume">
          Volume
        </label>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="news">
        <label class="form-check-label" for="news">
          News Catalyst
        </label>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="earnings">
        <label class="form-check-label" for="earnings">
          Latest Earnings
        </label>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="filings">
        <label class="form-check-label" for="filings">
          SEC Filings
        </label>
      </div>
    </div>
    <div class="col-12 d-flex justify-content-center mt-2">
       <a class="btn btn-primary" href="/results" role="button" id="results">View Results</a>
      <button class="btn btn-danger ml-2">Clear Parameters</button>
    </div>
  </form>
</div>

{{!-- Historical Search --}}
<div class="container border border-4 rounded p-3 vw-90 hide" id="historical-form">
  <form class="row g-2 justify-content-center px-4 pt-1">
    <div class="col-12 mb-2">
      <input class="form-control" type="text" placeholder="Input Ticker" aria-label="search-ticker" id="historical-ticker">
    </div>
    <div class="col-sm-6">
      <label for="date-from" class="form-label">From:</label>
      <input type="date" class="form-control" id="date-from">
    </div>
    <div class="col-sm-6">
      <label for="date-to" class="form-label">To:</label>
      <input type="date" class="form-control" id="date-to">
    </div>
    <div class="col-12 d-flex justify-content-center mt-2">
      <a class="btn btn-primary" href="/results" role="button" id="historical-results">View Results</a>
      <button class="btn btn-danger ml-2">Clear Parameters</button>
    </div>
  </form>
</div>